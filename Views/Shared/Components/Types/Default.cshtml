@{
}
@model IEnumerable<string>

<a class="btn btn-sm btn-block btn-outline-secondary" asp-controller="Home" asp-action="Index" asp-route-BookType="" asp-route-pageNum="1">Home</a>


@foreach (string t in Model)
    {
        <a class="btn btn-sm btn-block @(ViewBag.SelectedType == t ? "btn-secondary" : "btn-outline-secondary")" asp-controller="Home" asp-action="Index" asp-route-BookType="@t" asp-route-pageNum="1" >@t</a>
    }
