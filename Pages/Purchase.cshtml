@page
@model BookSite2._0.Pages.PurchaseModel
@{
}
<div class="m-3" >
    <h2>Your Basket</h2>
    <table class="table table-borderless table table-striped">
        <thead>
            <tr>
                <th>Item</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model.basket.Items)
            {
                <tr>
                    <td>@i.Book.Title</td>
                    <td>@i.Quantity</td>
                    <td>@i.Book.Price</td>
                    <td>@(i.Quantity * i.Book.Price)</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr class="font-weight-bold bg-light">
                <td colspan="3" class="text-right">Total:</td>
                <td>@Model.basket.CalculateTotal().ToString("c")</td>
            </tr>
        </tfoot>
    </table>

    <div>
        <a class="btn btn-outline-secondary" href="@Model.ReturnUrl">Continue Shopping</a>
    </div>
</div>
